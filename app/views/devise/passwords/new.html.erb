<div class="container-fluid h-100 body">
  <div class="row h-100 pt-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'col-12 col-md-4 mr-auto ml-auto mb-auto p-0 bg-white text-dark rounded mt-5' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="p-3">
        <strong><%= f.label :email %></strong><br>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">
              @
            </div>
          </div>
          <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
        </div>
      </div>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

      <%= f.submit "Send me reset password instructions", {:class => 'w-100 text-center text-uppercase bg-oschool p-3 text-white'} %>
    <% end %>
  </div>
</div>
