<main class="bg-light">
  <div class="container pb-5">
    <div class="row">
      <!--progression-->
      <div class="col-md-2 col-12 d-none side-menu d-md-block pt-4">
        <% if user_signed_in? %>
        <div class="row profile p-2">
          <div class="col-4">
            <img class="img-fluid rounded-circle" src="https://res.cloudinary.com/practicaldev/image/fetch/s--J1kzwnl0--/c_fill,f_auto,fl_progressive,h_90,q_auto,w_90/https://dev-to-uploads.s3.amazonaws.com/uploads/user/profile_image/67976/544fe0f6-b766-4437-8afd-a39930044121.jpeg" alt="">
          </div>
          <div class="col-8">
            <p class="font-weight-bold mb-2"><%= current_user.name %></p>
            <a href="#">
              <small>@<%= current_user.username %></small>
            </a>
          </div>
        </div>
        <% end %>

      </div>
      <!--end progression-->
      <!--main content-->
      <div class="col-md-7 main-content pt-5 col-12">
        <% @posts.each do |post| %>
          <div class="row border bg-white rounded mb-3">
            <div class="p-2 col-2">
              <img class="img-fluid rounded-circle" width="50" src="https://res.cloudinary.com/practicaldev/image/fetch/s--J1kzwnl0--/c_fill,f_auto,fl_progressive,h_90,q_auto,w_90/https://dev-to-uploads.s3.amazonaws.com/uploads/user/profile_image/67976/544fe0f6-b766-4437-8afd-a39930044121.jpeg" alt="">
            </div>
            <div class="pt-2 pb-4 col-10">
              <div class="user-info">
                <% if user_signed_in? %>
                <p><%= post.user.name %></p>
                <small>@<%= post.user.username %></small>
                <% end %>
              </div>
              <div class="title mt-2 mb-2">
                <h2 class="font-weight-bold"><%= post.title %></h2>
                <p>
                  <%= post.body %>
                </p>
              </div>

              <% if user_signed_in? %>
                <div class="actions d-flex">
                  <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post ?"} do %>
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <!--end main content-->
      <div class="col-md-2 col-12 users pt-4 offset-md-1">
        <div class="row bg-white border rounded">
          <h5 class="font-weight-bold p-3 border-bottom w-100">
            Users
          </h5>
          <nav class="d-flex flex-column">
            <a class="p-3 w-100" href="#">Silas</a>
            <a class="p-3 w-100" href="#">Sinan</a>
            <a class="p-3 w-100" href="#">Binyam</a>
            <a class="p-3 w-100" href="#">Eric</a>
          </nav>
        </div>
      </div>
      <div id="overlay"></div>
    </div>
  </div>
</main>
